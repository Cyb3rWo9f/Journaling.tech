# SECURE SERVER-SIDE ONLY VARIABLES (NO NEXT_PUBLIC_ PREFIX)
# These are NOT exposed to the browser

# GitHub Models API (Server-side only - SECURE)
# Create a fine-grained PAT with models:read permission
GITHUB_TOKEN=your_github_personal_access_token_here

# Weather API (Server-side only - SECURE)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# CLIENT-SIDE VARIABLES (These are safe to expose)
# Firebase configuration (these are meant to be public)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# App Configuration (Safe to be public)
NEXT_PUBLIC_APP_NAME=AI Journaling
NEXT_PUBLIC_APP_URL=http://localhost:3000